<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/normal_gap"
    android:paddingTop="@dimen/small_gap">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text.Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Accounts" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_gap"
        android:textAppearance="@style/Text.Caption"
        android:textColor="?secondaryTextColor"
        app:layout_constraintBaseline_toBaselineOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/title"
        tools:text="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/extra_small_gap"
        android:text="@string/portfolio_connected_header"
        android:textAppearance="@style/Text.Caption"
        android:textColor="?secondaryTextColor"
        app:layout_constraintBaseline_toBaselineOf="@id/counter"
        app:layout_constraintStart_toEndOf="@id/counter" />

    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/most_small_gap"
        app:layout_constraintBaseline_toBaselineOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_24_arrow_drop_up"
        app:tint="?iconColor" />

</androidx.constraintlayout.widget.ConstraintLayout>
